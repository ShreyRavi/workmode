{
  "manifest_version": 2,

  "name": "Work Mode - Site Blocker",
  "description": "Block all Time-Wasting Websites When You're On the Clock. Be More Efficient Online. Made by Shreyas Tallamraju.",
  "version": "1.1.1",
  "options_page": "options.html",

  "permissions": [
    "tabs",
    "https://www.facebook.com/",
    "http://www.facebook.com/",
    "http://www.twitter.com/",
    "storage"
  ], 
  "icons": {
    "128": "icon128.png"
  },
  "background": {
    "scripts": ["redir.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Work Mode"
  }

}